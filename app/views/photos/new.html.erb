<%= form_for @photo, :url => photos_path, :html => { :multipart => true } do |f| %>
  <%= f.file_field :img %>
  <br>
  <%= f.label :description, 'Description:'%>
  <%= f.text_field :description %>
  <br>
  <%= f.submit 'Upload' %>
<% end %>

<%= simple_format link_to 'Back to index', photos_path %>